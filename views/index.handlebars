{{!-- Populates the body tag on the html page --}}
<div class="jumbotron">
    <h1 class="display-3">Nomable <i class="fa fa-bars" aria-hidden="true"></i></h1>
    <p class="lead">Mmm...Burgers. Nom Nom.</p>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <img class="card-img-top" src="./assets/img/burger_1.jpeg" alt="Burger images" height="300">
                <div class="card-body">
                    <h4 class="card-title">Menu</h4>
                    <p class="card-text">
                        <ul>
                            {{#each burgers}} 
                                {{#unless devoured}}    
                                    {{> burgers/burger-block devoured=false}} 
                                {{/unless}} 
                            {{/each}}
                        </ul>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <img class="card-img-top" src="./assets/img/empty_plate.jpeg" alt="Card image cap" height="300">
                <div class="card-body">
                    <h4 class="card-title">Devoured</h4>
                    <p class="card-text">
                        <ul>
                            {{#each burgers}} 
                                {{#if devoured}} 
                                    {{> burgers/burger-block-2 devoured=false}} 
                                {{/if}} 
                            {{/each}}
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title-lead">Not seeing anything you like?</h3>
                    <h4 class="card-title">Build your own!</h4>
                    <p class="card-text">
                        <form class="new-form">
                            <div class="form-group">
                                <label for="nw-brg">I'd like a...</label>
                                <input type="text" id="nw-brg" name="burgerName">
                            </div>
                            <button type="button" class="btn btn-outline-danger btn-sm" id="submit">Add to the menu</button>
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
{{!-- Footer --}}
<div id="footer" class="col-lg-12 text-center">
    <p>Nomable &copy; 2017</p>
</div>